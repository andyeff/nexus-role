[Unit]
Description=nexus service
After=network.target

[Service]
Type=forking
LimitNOFILE={{ nexus_max_filedescriptors }}
ExecStart={{ nexus_appdir }}/bin/nexus start
ExecStop={{ nexus_appdir }}/bin/nexus stop
User={{ nexus_user }}
Group={{ nexus_group }}
Restart=on-abort
RestartSec=25s

[Install]
WantedBy=multi-user.target
